{
  "name": "server",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/main.ts --outfile server",
    "dev": "bun run --hot src/main.ts",
    "start": "npm run dist/src/main.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@erc7824/nitrolite": "^0.2.16",
    "@hono/node-server": "^1.14.4",
    "@hono/trpc-server": "^0.3.4",
    "@openrouter/ai-sdk-provider": "^0.7.1",
    "@trpc/client": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "ai": "^4.3.16",
    "arktype": "^2.1.20",
    "axios": "^1.9.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "ethers": "^5.7.2",
    "hono": "^4.7.6",
    "intmax-walletsdk": "^0.0.4",
    "intmax2-client-sdk": "^1.2.4",
    "intmax2-server-sdk": "^1.2.4",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "neverthrow": "^8.2.0",
    "node-cron": "^4.1.0",
    "pg": "^8.14.1",
    "redstone-api": "^0.4.13",
    "siwe": "^3.0.0",
    "viem": "^2.31.2",
    "zod": "^3.25.16"
  },
