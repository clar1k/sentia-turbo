    "@types/bun": "^1.2.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2"
  }
